<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- ================= IMPORT SECURITY ================= -->
	<import resource="applicationContext-security.xml" />

	<!-- ================= DATASOURCE ================= -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName"
			value="com.mysql.cj.jdbc.Driver" />
		<property name="url"
			value="jdbc:mysql://localhost:3306/capitalbank" />
		<property name="username" value="root" />
		<property name="password" value="root123" />
	</bean>

	<!-- ================= TABLE INITIALIZATION ================= -->
	<bean id="tableUtil" class="com.capitalbank.util.table.TableUtil"
		init-method="createCustomerTableIfNotExists">
		<constructor-arg ref="dataSource" />
	</bean>


	<!-- ================= TRANSACTION MANAGER ================= -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- ================= DAO ================= -->
	<bean id="customerDao"
		class="com.capitalbank.daoImpl.CustomerDaoImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- ================= SERVICE ================= -->
	<bean id="customerService"
		class="com.capitalbank.serviceImpl.CustomerServiceImpl">
		<property name="customerDao" ref="customerDao" />
		<property name="passwordEncoder" ref="passwordEncoder" />
	</bean>

	<!-- <bean id="loginSuccessHandler"
		class="com.capitalbank.controller.customers.LoginSuccessHandler">
		<property name="customerService" ref="customerService" />
	</bean> -->

</beans>
 
	