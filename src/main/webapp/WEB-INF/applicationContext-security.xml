<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<!-- UserDetailsService -->
	<beans:bean id="userDetailsService"
		class="com.capitalbank.security.CustomerUserDetailsService">
		<beans:property name="customerService"
			ref="customerService" />
	</beans:bean>

	<beans:bean id="passwordEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
		<!-- Cost factor = 12 -->
		<beans:constructor-arg value="12" />
	</beans:bean>

	<http pattern="/pages/**" security="none" />

	<!-- Security rules -->
	<http auto-config="true">

		<!-- ðŸ”¥ ZK INTERNAL (MUST BE FIRST) -->
		<intercept-url pattern="/zkau/**"
			access="IS_AUTHENTICATED_ANONYMOUSLY" />

		<!-- Public pages -->
		<intercept-url pattern="/index.zul"
			access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url
			pattern="/pages/customers/customer-login-form.zul"
			access="IS_AUTHENTICATED_ANONYMOUSLY" />

		<intercept-url
			pattern="/pages/customers/customer-registration-form.zul"
			access="IS_AUTHENTICATED_ANONYMOUSLY" />

		<!-- Role based -->
		<intercept-url pattern="/zul/admin/**"
			access="ROLE_ADMIN" />

		<intercept-url pattern="/zul/user/**" access="ROLE_USER" />
		<intercept-url pattern="/admin.zul" access="ROLE_ADMIN" />

		<intercept-url pattern="/pages/accounts/**"
			access="ROLE_USER" />
		<intercept-url pattern="/pages/customers/**"
			access="IS_AUTHENTICATED_ANONYMOUSLY" />

		<!-- Login -->
		<form-login
			login-page="/pages/customers/customer-login-form.zul"
			default-target-url="/pages/customers/dashboard.zul"
			login-processing-url="/j_spring_security_check"
			authentication-failure-url="/pages/customers/customer-login-form.zul?error=true" />

		<!-- Logout -->
		<logout
			logout-success-url="/pages/customers/customer-login-form.zul"
			invalidate-session="true" />

		<!-- ðŸ”’ BLOCK EVERYTHING ELSE -->
		<intercept-url pattern="/**"
			access="IS_AUTHENTICATED_FULLY" />

		<session-management>
			<concurrency-control max-sessions="1"
				expired-url="/pages/customers/customer-login-form.zul?/login.zul?timeout=true" />
		</session-management>

	</http>

	<authentication-manager>
		<authentication-provider
			user-service-ref="userDetailsService">
			<password-encoder ref="passwordEncoder" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>