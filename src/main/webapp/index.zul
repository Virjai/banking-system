                font-weight: 400;
                color: rgba(255, 255, 255, 0.9);
                text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            }

            /* ===== CARD CONTAINER ===== */
            .card-wrapper {
                position: relative;
                width: 350px;
                height: 420px;
                margin-top: 40px;
            }

            .card {
                position: absolute;
                top: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 640px;
                padding: 50px 60px;
                border-radius: 20px;
                background: rgba(255, 255, 255, 0.25);
                border: 1px solid rgba(255, 255, 255, 0.3);
                transition: opacity 1.5s ease-in-out;
                opacity: 0;
            }

            .card.active {
                opacity: 1;
            }

            .card-icon {
                font-size: 80px;
            }

            .card-title {
                font-size: 26px;
                font-weight: 700;
                color: white;
            }

            .card-text {
                font-size: 16px;
                color: rgba(255, 255, 255, 0.85);
                text-align: center;
            }

            /* ===== FOOTER ===== */
            .footer {
                padding: 30px;
                text-align: center;
                color: rgba(255, 255, 255, 0.7);
            }
        </style>
        
