            /* ===== GLOBAL ===== */
            body, html {
                margin: 0;
                padding: 0;
            }

            div {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
                margin: 0;
                padding: 0;
            }

            /* ===== WINDOW RESET ===== */
            .z-window,
            .z-window-embedded,
            .z-window-content {
                background: transparent !important;
                border: none !important;
                box-shadow: none !important;
                padding: 0 !important;
            }

            /* ===== NAVBAR ===== */
            .navbar {
                width: 100%;
                padding: 20px 40px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
